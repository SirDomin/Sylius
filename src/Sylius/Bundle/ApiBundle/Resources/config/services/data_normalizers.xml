<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius.api.data_normalizer.address_book" class="Sylius\Bundle\ApiBundle\Serializer\AddressNormalizer">
            <argument type="service" id="serializer.normalizer.object" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="Sylius\Bundle\ApiBundle\Provider\CustomerProviderInterface" />
            <argument type="service" id="api_platform.iri_converter" />
            <argument type="string">%sylius.model.address.class%</argument>
            <argument type="string">%sylius.model.address.interface%</argument>
            <tag name="serializer.normalizer" priority="64" />
        </service>
    </services>
</container>
